const express = require('express');
const { createProxyMiddleware } = require('http-proxy-middleware');
require('dotenv').config();

const app = express();
const PORT = process.env.PORT || 3000;
const TARGET = process.env.TARGET_URL || 'https://play.geforcenow.com';

// –ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞
app.get('/', (req, res) => {
  res.send(`
    <!DOCTYPE html>
    <html>
    <head><title>My Proxy</title><style>
      body { font-family: Arial; margin: 40px; background: #0f172a; color: #e2e8f0; }
      .container { max-width: 800px; margin: 0 auto; background: #1e293b; padding: 30px; border-radius: 15px; }
    </style></head>
    <body>
      <div class="container">
        <h1>‚úÖ –ú–æ–π –ø—Ä–æ–∫—Å–∏-—Å–µ—Ä–≤–µ—Ä —Ä–∞–±–æ—Ç–∞–µ—Ç</h1>
        <p>–ê–¥—Ä–µ—Å: <code>${req.protocol}://${req.get('host')}</code></p>
        <p>–ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ—Ç –Ω–∞: <code>${TARGET}</code></p>
        <p><a href="/health">–ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∑–¥–æ—Ä–æ–≤—å–µ —Å–µ—Ä–≤–µ—Ä–∞</a></p>
      </div>
    </body>
    </html>
  `);
});

// Health check
app.get('/health', (req, res) => {
  res.json({
    status: 'OK',
    message: 'Proxy is running',
    timestamp: new Date().toISOString(),
    target: TARGET
  });
});

// WebSocket –ø—Ä–æ–∫—Å–∏ (–º–∞—Å–∫–∏—Ä–æ–≤–∫–∞)
app.use('/ws', createProxyMiddleware({
  target: TARGET,
  changeOrigin: true,
  ws: true,
  pathRewrite: { '^/ws': '' },
  logLevel: 'silent'
}));

// –û–±—ã—á–Ω—ã–π HTTP –ø—Ä–æ–∫—Å–∏
app.use('/proxy', createProxyMiddleware({
  target: TARGET,
  changeOrigin: true,
  pathRewrite: { '^/proxy': '' }
}));

app.listen(PORT, () => {
  console.log(\`üöÄ –°–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω –Ω–∞ –ø–æ—Ä—Ç—É ${PORT}\`);
});
